---
// Supports weights 100-900
import '@fontsource-variable/roboto';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/clock.svg" />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
	:root{
		--color-principal: #f2f5f9;
		--color-secundario: #ffffff;
		--color-parrafos: #4b5563;
		--color-codigo: #000000;
	}

	*{
		margin: 0;
		padding: 0;
		box-sizing: border-box;
	}
	
	body {
		width: 100%;
		font-family: 'Roboto', sans-serif;
		display: grid;
		place-items: center;
		background-color: var(--color-principal);
	}

	h1{
		font-size: 2.5rem;
		font-weight: 700;
	}

	p{
		font-size: 1.2rem;
		font-weight: 400;
		color: var(--color-parrafos);
	}
</style>
